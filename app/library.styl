.library nav
  align-items center
  display flex
  flex-flow row
  height 2.2em
  position sticky
  top 0

  a.order
    background #444
    color #ffc
    font-weight bold

  input
    font-size 0.8rem
    height 0.8rem
    line-height 0.8rem
    margin 0 0 0 0.2em
    padding 0 0 0 0
    width 7em

.library ul
  align-items flex-start
  display flex
  flex-flow row wrap
  gap 1rem
  justify-content center
  list-style-type none

  li
    align-items center
    display flex
    flex 0 0 auto
    flex-flow column
    justify-content flex-start
    gap 0.25rem
    padding 0.5rem
    position relative
    text-align center
    width unquote('calc(8rem + 8vw)')

    &.active
      background hsl(45, 100%, 80%)

    .art
      height 10rem
      width 10rem

    .artist
    .title
      width 100%
      overflow hidden
      white-space nowrap
      text-overflow ellipsis

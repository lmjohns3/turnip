@import url('https://rsms.me/inter/inter.css')

*
  box-sizing border-box
  margin 0
  padding 0

html
  font-family 'Inter', sans-serif
  @supports (font-variation-settings: normal)
    font-family 'Inter var', sans-serif

:root, input
  font-size clamp(0.8rem, calc(0.8rem + ((1vmin - 0.1rem) * 0.7778)), 1.5rem)
  line-height 1.2

nav
  align-items center
  background #333
  color #ccc
  display flex
  flex-flow row
  font-size 1.2em
  gap 0.6em
  height 2em
  justify-content flex-start
  line-height 2
  left 0
  padding-left 0.4em
  right 0
  z-index 1000

  a, span
    color #ccc
    text-decoration none
    white-space nowrap

.title
  font-weight bold

.artist
  opacity 0.7

.genre
  font-size 0.8em
  line-height 1.5
  opacity 0.7

.art
  background hsl(120, 30%, 70%)
  border-radius 0.3em

  img
    border-radius 0.3em
    width 100%
    height 100%
    object-fit cover

#root > nav
  bottom 0
  position fixed

.mini-player
  align-items center
  cursor pointer
  display flex
  flex 1 1 auto
  flex-flow row
  gap 0.3em
  height 100%
  justify-content flex-end

  .art
    border-radius 0.1em
    height 1.6em
    margin-left 0.2em
    width 1.6em

    img
      border-radius 0.1em

  .title
    flex 1 1 auto
    max-width 30vw
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

    @media (max-device-width: 480px)
      display none

  .play
    display inline-block
    height 1.6em
    line-height 1.5
    padding 0 0.4em

@import url('https://rsms.me/inter/inter.css')

*
  box-sizing border-box
  margin 0
  padding 0

:root, button, input, option, select
  background #333
  color #ccc
  font-family 'Inter', sans-serif
  @supports (font-variation-settings: normal)
    font-family 'Inter var', sans-serif
  font-size clamp(1rem, calc(1rem + 0.5 * (1vw - 0.25rem)), 1.5rem)
  line-height 1.2

a
  text-decoration none

nav
  align-items center
  background #444
  box-shadow 0 0 0.2em #111
  display flex
  gap 0.5em
  padding 0.2em
  position sticky
  top 0
  z-index 1

  & > a
    cursor pointer

  .active
    color #eee
    font-weight bold

  .sep
    flex 1 1 auto

  &.top
    a
      color inherit
      font-size 1.5em
    button
      font-size 1.5em

  .art
    border-radius 0.1em
    flex 0 0 auto
    height 1.5em
    width 1.5em

  .prev
  .next
    @media (max-device-width: 480px)
      display none

  .output
    font-size 1.5em
    font-weight bold

button
  background transparent
  border none

.title
  font-weight bold

.artist
  opacity 0.7

.track
  font-size 0.8em
  opacity 0.7

.genre
  font-size 0.8em
  opacity 0.5

.art
  aspect-ratio 1
  background hsl(120, 30%, 70%)
  border-radius 0.1em

  img
    border-radius 0.1em
    width 100%
    height 100%
    object-fit cover
    object-position 50% 50%

.ellipsis
  width 100%
  overflow hidden
  white-space nowrap
  text-overflow ellipsis

.player
  nav
    bottom 0
    @media (max-device-width: 480px)
      .label
        display none

  ol
    background #bbb
    color #333
    list-style-type none

  .item
    &:nth-child(even)
      background #aaa
    &:hover
      background #ccc
    &.current
      background #69c
      font-size 1.5em
    &.removable
      margin-left -2em

    .info
      display grid
      grid 1.2em 0.1em 1.2em / 2.8em 1fr
      padding 0.3em

      .art
        grid-row 1 / span 3
        grid-column 1
        height 2.5em
        width 2.5em

      .title
        grid-row 1
        grid-column 2

      .artist
        grid-row 3
        grid-column 2

      .remove
        font-size 1.5em
        margin-right -2em
        text-align right

  .scrubber
    background rgba(255, 255, 255, 0.3)
    height 1.2em
    position relative
    width 100%

    .bar
      background rgba(255, 255, 255, 0.3)
      bottom 0
      height 100%
      left 0
      overflow hidden
      position absolute
      top 0

    .time
      padding 0 0.2em
      position absolute

    .position
      left 0

    .duration
      right 0

.library
  nav
    bottom 0

    input, select
      border none
      padding 0.1em 0.2em
      width 7em

  ul
    align-items center
    display flex
    flex-flow row wrap
    justify-content center
    list-style-type none

    & > li
      border-radius 0.2em
      display grid
      flex 0 0 auto
      grid-template-rows 10em 1.5em 1.5em
      grid-template-columns 10em 11em
      height 14em
      width 11em
      padding 0.5em

      .art
        grid-column 1 / span 1
        grid-row 1 / span 1
        height 10em

      .title
        align-self end
        grid-column 1 / span 1
        grid-row 2 / span 1
      
      .artist
        align-self end
        grid-column 1 / span 1
        grid-row 3 / span 1
      
      .buttons
        align-self end
        display flex
        justify-content flex-start
        line-height 1

        button
          font-size 1.5em

      &.active
        background #444
        width 22em

      &.single
        .art
          background transparent
          border solid 2px #bdf

      ol.items
        font-size 0.9em
        grid-column 2 / span 1
        grid-row 1 / span 1
        list-style-type none
        overflow-x hidden
        overflow-y scroll
        padding 0.1em 0 0.1em 0.3em

        li
          padding-left 0.2em
          white-space nowrap

          &:nth-child(odd)
            background #333

      ul.buttons
        grid-column 2 / span 1
        grid-row 2 / span 2
        list-style-type none

.playlists
  display flex
  flex-flow column

  .playlist
    display flex
    flex-flow row
    height 3.6em
    overflow hidden
    padding 0.5em

    &:nth-child(even)
      background #ccc

    &.active
      background #ffc

    .arts
      display flex
      flex-flow row wrap

      .art
        height 1.1em
        margin 0 0.1em 0.1em 0
        width 1.1em

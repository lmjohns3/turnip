@import url('https://rsms.me/inter/inter.css')

*
  box-sizing border-box
  margin 0
  padding 0

:root, input, select, option
  background #333
  color #ccc
  font-family 'Inter', sans-serif
  @supports (font-variation-settings: normal)
    font-family 'Inter var', sans-serif
  font-size clamp(0.9rem, calc(0.9rem + ((1vw - 0.2rem) * 1.2857)), 1.8rem)
  line-height 1.2

input, select, option
  font-size 0.9em

nav
  align-items center
  background #444
  box-shadow 0 0 0.2em #111
  display flex
  gap 0.5em
  padding 0.2em
  position sticky
  top 0
  z-index 1

  & > a
    cursor pointer

  .active
    color #eee
    font-weight bold

  .sep
    flex 1 1 auto

.title
  font-weight bold

.artist
  opacity 0.7

.track
  font-size 0.8em
  opacity 0.7

.genre
  font-size 0.8em
  opacity 0.5

.art
  aspect-ratio 1
  background hsl(120, 30%, 70%)
  border-radius 0.1em

  img
    border-radius 0.1em
    width 100%
    height 100%
    object-fit cover
    object-position 50% 50%

.ellipsis
  width 100%
  overflow hidden
  white-space nowrap
  text-overflow ellipsis

.player
  nav
    bottom 0
    @media (max-device-width: 480px)
      .label
        display none

  ol
    background #bbb
    color #333
    list-style-type none

  .item
    &:nth-child(even)
      background #aaa
    &:hover
      background #ccc
    &.current
      background #69c
      font-size 1.5em
    &.removable
      margin-left -2em

    .info
      display grid
      grid 1.2em 0.1em 1.2em / 2.8em 1fr
      padding 0.3em

      .art
        grid-row 1 / span 3
        grid-column 1
        height 2.5em
        width 2.5em

      .title
        grid-row 1
        grid-column 2

      .artist
        grid-row 3
        grid-column 2

      .remove
        font-size 1.5em
        margin-right -2em
        text-align right

  .scrubber
    background rgba(255, 255, 255, 0.3)
    height 1.2em
    position relative
    width 100%

    .bar
      background rgba(255, 255, 255, 0.3)
      bottom 0
      height 100%
      left 0
      overflow hidden
      position absolute
      top 0

    .time
      padding 0 0.2em
      position absolute

    .position
      left 0

    .duration
      right 0

.mini-player
  align-items center
  display flex
  gap 0.3em
  height 100%
  padding 0

  .art
    border-radius 0.1em
    flex 0 0 auto
    height 1em
    width 1em

  .prev
  .next
    @media (max-device-width: 480px)
      display none

  .artist
  .title
    font-size 0.83333em

.library
  nav
    bottom 0

    input, select
      border none
      padding 0.1em 0.2em
      width 7em

  ul
    display grid
    grid-template-columns repeat(auto-fill, minmax(10em, 1fr))
    list-style-type none

    & > li
      align-items stretch
      border-radius 0.2em
      display flex
      flex-flow column
      justify-content flex-start
      gap 0.2em
      padding 0.5em

      .art
        height 9em
        width 9em
      
      .buttons
        display flex
        font-size 1.618em
        gap 0.618em
        justify-content flex-start

        span:hover
          cursor pointer

      &.active
        background #444

      &.single
        .art
          background transparent
          border solid 2px #bdf

  ol.tracks
    list-style-type none

    .track
      padding 0.1em 0.5em

      &:nth-child(odd)
        background #333

.playlists
  display flex
  flex-flow column

  .playlist
    display flex
    flex-flow row
    height 3.6em
    overflow hidden
    padding 0.5em

    &:nth-child(even)
      background #ccc

    &.active
      background #ffc

    .arts
      display flex
      flex-flow row wrap

      .art
        height 1.1em
        margin 0 0.1em 0.1em 0
        width 1.1em
